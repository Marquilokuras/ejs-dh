<!DOCTYPE html>
<html>

<head>
  <title>Pimienta & sal</title>
  <link rel="stylesheet" href="/css/style.css" />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body>
  <!-- Navbar (sit on top) -->
  <nav class="ps-top">
    <div class="ps-bar ps-white ps-padding ps-card ps-nav">
      <a href="#home" class="ps-bar-item ps-button">Pimienta & Sal</a>
      <!-- Right-sided navbar links. Hide them on small screens -->
      <div class="ps-right ps-hide-small">
        <a href="#about" class="ps-bar-item ps-button">About</a>
        <a href="#menu" class="ps-bar-item ps-button">Menu</a>
      </div>
    </div>
  </nav>

  <!-- Header -->
  <%- include('./partials/header.ejs') %>

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <img src="/images/<%= about.img %>" class="ps-round ps-image ps-opacity-min" alt="<%= about.title %>"
            width="600" height="750" />
        </div>

        <div class="ps-col m6 ps-padding-large">
          <h1 class="ps-center">Pimienta & Sal</h1>
          <br />
          <p class="ps-large">
            <%= about.description1 %>
              <span class="ps-tag ps-light-grey">seasonal</span> ingredients.
          </p>
          <p class="ps-large ps-text-grey ps-hide-medium">
            <%= about.description2 %>
          </p>
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <br />
          <% data.forEach((plato)=>{ %>
            <h4>
              <%= plato.nombre %>
            </h4>
            <p class="ps-text-grey">
              <%= plato.descripcion %> U$S <%= plato.precio%>
            </p>
            <%})%>

              <br />

        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img src="/images/menu.jpg" class="ps-round ps-image ps-opacity-min" alt="Menu" />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>
    </div>
</body>

</html>